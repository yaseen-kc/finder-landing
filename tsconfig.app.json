{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
      "paths": {
        "@productDetail/*": ["src/assets/components/productDetail/*"],
        "@productDetailConstant": [
          "src/assets/constants/productDetail/productDetailConstant.ts"
        ],
        "@productList/*": ["src/assets/components/productList/*"],
        "@productListConstant": [
          "src/assets/constants/productList/productListConstant.ts"
        ]
        ,
        "@cartConstants": [
          "src/assets/constants/cart/cartConstants.ts"
        ],
        "@checkoutConstant": [
          "src/assets/constants/checkout/checkoutConstant.ts"
        ],
        "@paginationConstant": [
          "src/assets/constants/productDetail/paginationConstant.ts"
        ],
        "@profileConstant": [
          "src/assets/constants/profile/profileConstant.ts"
        ]
      }
  },
  "include": ["src"]
}
